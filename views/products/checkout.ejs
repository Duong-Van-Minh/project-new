<%- include('../layuot/header'); -%>
    
<% if (typeof cart !== "undefined") { %>
 
 <table class="table table-hover">
   <thead>
     <tr>
       <th>Image</th>
       <th>Title</th>
       <th>Price</th>
       <th>Quantity</th>
       <th></th>
       <th>Subtotal</th>
     </tr>
   </thead>
   <tbody>
     <% let total = 0; %> 
     <% cart.forEach(c => { %>
      <% let sub = parseFloat(c.qty * c.price).toFixed(2) %> 
      <% total += +sub %> 
      <tr>
        <td><img class="cpi" src="<%= c.image %>"  alt=""></td>
        <td><%= c.title %></td>
        <td><%= c.price %></td>
        <td><%= c.qty %></td>
        <td>
          <a href="/cart/update/<%= c.title %>/?action=add ">+</a>&nbsp;
          <a href="/cart/update/<%= c.title %>/?action=remove ">-</a>&nbsp;
          <a href="/cart/update/<%= c.title %>/?action=clear ">Clear</a>&nbsp;
        </td>
        <td><%= sub %></td>
      </tr>
      
     <% }) %> 
    <tr>
      <td colspan="6" align="right"><b>Total: </b>$<%= parseFloat(total).toFixed(2) %></td>
   </tr>
   <tr>
    <td colspan="5" align="right">
      <a href="/cart/clear" class="clearcart btn btn-danger">clear cart</a>
    </td>
    <td colspan="6" align="right">
      <a href="#" class="btn btn-primary buynow">buy now</a>
    </td>
  </tr>
   </tbody>
 </table>
 
<% } else { %>
 <h3 class="text-center">Your cart is empty</h3> 
<% } %>
  
<script>
  $(function(){
    $('a.clearcart').on('click',function(){
		if (!confirm('your want clear cart ')) return false;
	});
  })
</script>



        
<%- include('../layuot/footer'); -%>