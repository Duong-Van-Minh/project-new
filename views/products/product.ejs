<%- include('../layuot/header'); -%>
    
  
<div class="row">
    <h1 class="page-header"><%= p.title %></h1>
    
    <div class="col-xs-12  col-md-5">
      <img src="/product_images/<%= p.id %>/<%= p.image %>" alt="" class="spi">
    </div>
    
    <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
      <p><%= p.desc %></p>
      <p>$<%= parseFloat(p.price).toFixed(2) %></p>
       <% if (loggedIn) { %>
        <p><a href="/cart/add/<%= p.slug %>">add</a></p>
        <% } else { %>
         <p>your must be login </p>
       <% } %>
      
    </div>
    
    <div class="col-xs-12">
      <ul class="gallery">
        <% galleryImages.forEach(image => { %>
          <% if (image != "thumbs") { %>
           <li>
             <a href="/product_images/<%= p._id %>/gallery/<%= image %>" data-fancybox="gallery">
              <img src="/product_images/<%= p._id %>/gallery/thumbs/<%= image %>" alt="">
            </a>
           </li>
          <% } %>
        <% }) %>
      </ul>
    </div>
    
</div>
  
    



        
<%- include('../layuot/footer'); -%>